<Page x:Class="Calendar___MVVM.Views.ChoicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Calendar___MVVM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChoicePage"
      Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Что вы сегодня делали?" Grid.Row="1" Grid.Column="1" FontSize="20" HorizontalAlignment="Center" FontWeight="Bold"/>
        <ListBox x:Name="ListBox" Grid.Row="2" Grid.ColumnSpan="2" Margin="5"/>
        <Button x:Name="save_btn" Content="Сохранить выбранные данные" Cursor="Hand" Grid.Row="3" Grid.ColumnSpan="23" Foreground="White" FontWeight="Bold"/>
    </Grid>
</Page>